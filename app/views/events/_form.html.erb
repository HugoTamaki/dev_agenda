<%= simple_form_for @event do |f| %>

  <div class="col-lg-6">
    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :name, label: 'Nome', input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.input :description, as: :text, label: 'Descrição', input_html: {class: 'form-control', rows: 10} %>
      </div>
      <div class="form-group">
        <div class="input-append date" id="date" data-date-format="dd-mm-yyyy">
          <input class="span2" size="16" type="text" name="event[date]" id="event_date">
          <span class="add-on"><i class="icon-th"></i></span>
        </div>
      </div>
    </div>  
  </div>
  <div class="col-lg-6">
    <%= f.simple_fields_for :address do |address_fields| %>
      <div class="form-group">
        <%= address_fields.input :street, label: "Logradouro", input_html: {class: 'form-control'} %>
        <%= address_fields.input :number, label: "Nº", input_html: {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= address_fields.input :state, label: "Estado", input_html: {class: 'form-control'} %>
        <%= address_fields.input :city, label: "Cidade", input_html: {class: 'form-control'} %>
        <%= address_fields.input :district, label: "Bairro", input_html: {class: 'form-control'} %>
      </div>
    <% end -%>
  </div>
  
  <div class="col-lg-12">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
